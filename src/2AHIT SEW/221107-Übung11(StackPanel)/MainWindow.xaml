<Window x:Class="_221107_Übung11_StackPanel_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_221107_Übung11_StackPanel_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        
        <StackPanel Orientation="Horizontal">
            <Label Content="Radius:"/>
            <TextBox x:Name="txtRadius" MinWidth="40"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="y-Koordinate:"/>
            <TextBox x:Name="txtY" MinWidth="40"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="X-Koordinate:"/>
            <TextBox x:Name="txtX" MinWidth="40"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnCalculate" Content="Calculate" Click="Calculate_Click" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="distance:"/>
            <Label x:Name="lblDist" Content="" MinWidth="40"/>
        </StackPanel>
    </StackPanel>
</Window>
